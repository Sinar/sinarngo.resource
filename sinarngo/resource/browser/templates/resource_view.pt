<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="sinarngo.resource">
<body>

<metal:main fill-slot="content-core">
  <metal:content-core define-macro="content-core">

    <h3>Resource Type</h3>
  <p tal:content="structure view/w/resource_type/render"/>

  <h3>Details</h3>
  <div tal:content="structure view/w/details/render">
  </div>

    <fieldset id="folder-listing">
        <legend>Contents</legend>
<!-- 
    <ul>
        <li tal:content="structure view/w/attachment_1/render"></li>
        <li tal:content="structure view/w/attachment_2/render"></li>
        <li tal:content="structure view/w/attachment_3/render"></li>
  </ul> -->
      <ul>
        <li tal:condition="context/attachment_1"><a tal:attributes="href python:context.absolute_url()+'/@@images/attachment_1'" tal:content="context/attachment_1/filename"></a></li>
        <li tal:condition="context/attachment_2"><a tal:attributes="href python:context.absolute_url()+'/@@images/attachment_2'" tal:content="context/attachment_2/filename"></a></li>
        <li tal:condition="context/attachment_3"><a tal:attributes="href python:context.absolute_url()+'/@@images/attachment_3'" tal:content="context/attachment_3/filename"></a></li>
  </ul>
    </fieldset>

  <h3>URL</h3>
        <a tal:attributes="href context/url" tal:content="structure view/w/url/render"></a>

  </metal:content-core>
</metal:main>

</body>
</html>

